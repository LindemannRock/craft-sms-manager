{# Languages Tab - Language distribution analytics #}

{# Language Summary Stats #}
<div class="analytics-stats">
    <div class="stat-box">
        <div class="stat-value" style="color: #3b82f6;" id="english-count">{{ summaryStats.english|number_format }}</div>
        <div class="stat-label">{{ languageLabels.en }} {{ 'Messages'|t('sms-manager') }}</div>
    </div>
    <div class="stat-box">
        <div class="stat-value" style="color: #8b5cf6;" id="arabic-count">{{ summaryStats.arabic|number_format }}</div>
        <div class="stat-label">{{ languageLabels.ar }} {{ 'Messages'|t('sms-manager') }}</div>
    </div>
    <div class="stat-box">
        <div class="stat-value" style="color: #6b7280;" id="other-count">{{ summaryStats.other|number_format }}</div>
        <div class="stat-label">{{ languageLabels.other }} {{ 'Messages'|t('sms-manager') }}</div>
    </div>
</div>

{# Language Charts #}
<div class="analytics-charts two-columns">
    <div class="chart-container">
        <h3>{{ 'Language Distribution'|t('sms-manager') }}</h3>
        <canvas id="language-pie-chart"></canvas>
    </div>
    <div class="chart-container">
        <h3>{{ 'Daily Language Breakdown'|t('sms-manager') }}</h3>
        <div style="height: 250px;">
            <canvas id="language-daily-chart"></canvas>
        </div>
    </div>
</div>

{# Language Info #}
<div class="chart-container" style="margin-top: 24px;">
    <h3>{{ 'Language Detection Info'|t('sms-manager') }}</h3>
    <div class="pane" style="background: #f8fafc; padding: 20px;">
        <p class="light" style="margin: 0;">
            {{ 'Messages are automatically categorized based on their content:'|t('sms-manager') }}
        </p>
        <ul style="margin: 12px 0 0 0; padding-left: 20px; color: #596673;">
            <li><strong>{{ languageLabels.en }}</strong> - {{ 'Messages containing primarily Latin characters (GSM-7 encoding)'|t('sms-manager') }}</li>
            <li><strong>{{ languageLabels.ar }}</strong> - {{ 'Messages containing Arabic script characters (UCS-2 encoding)'|t('sms-manager') }}</li>
            <li><strong>{{ languageLabels.other }}</strong> - {{ 'Messages with mixed or other character sets'|t('sms-manager') }}</li>
        </ul>
    </div>
</div>
